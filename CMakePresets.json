{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Ninja",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "20"
      }
    },
    {
      "name": "debug_opengl",
      "inherits": "windows-base",
      "binaryDir": "${sourceDir}/debug_opengl",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "KALAWINDOW_RENDERER": "opengl",
		"CMAKE_CXX_FLAGS": "-DKALAWINDOW_SUPPORT_OPENGL"
      }
    },
    {
      "name": "debug_vulkan",
      "inherits": "windows-base",
      "binaryDir": "${sourceDir}/debug_vulkan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "KALAWINDOW_RENDERER": "vulkan",
		"CMAKE_CXX_FLAGS": "-DKALAWINDOW_SUPPORT_VULKAN"
      }
    },
    {
      "name": "release_opengl",
      "inherits": "windows-base",
      "binaryDir": "${sourceDir}/release_opengl",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "KALAWINDOW_RENDERER": "opengl",
		"CMAKE_CXX_FLAGS": "-DKALAWINDOW_SUPPORT_OPENGL"
      }
    },
    {
      "name": "release_vulkan",
      "inherits": "windows-base",
      "binaryDir": "${sourceDir}/release_vulkan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "KALAWINDOW_RENDERER": "vulkan",
		"CMAKE_CXX_FLAGS": "-DKALAWINDOW_SUPPORT_VULKAN"
      }
    }
  ],
  "buildPresets": [
    { "name": "debug_opengl", "configurePreset": "debug_opengl" },
    { "name": "debug_vulkan", "configurePreset": "debug_vulkan" },
    { "name": "release_opengl", "configurePreset": "release_opengl" },
    { "name": "release_vulkan", "configurePreset": "release_vulkan" }
  ]
}
